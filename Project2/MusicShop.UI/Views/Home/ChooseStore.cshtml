@model MusicShop.Domain.Order

@{
    ViewData["Title"] = "Create";
}

<h4>Choose A Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="ChooseStore">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Store Location</label>
                <input type="hidden" name="StoreId" value="@ViewBag.StoreId" />
                <select asp-for="StoreId" class ="form-control" asp-items="ViewBag.StoreId">
                    <option>Choose a location</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Choose" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
