@model IEnumerable<MusicShop.Domain.Store>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Stores</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td><a asp-controller="Orders" asp-route-id="@item.Id">Order History</a></td>
            <td>
                <a asp-action="Inventory" asp-route-id="@item.Id">Inventory</a>
            </td>
        </tr>
}
    </tbody>
</table>
