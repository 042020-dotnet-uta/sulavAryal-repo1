@model InventoryItem
@Html.ValidationMessage("ErrorMessage", new { @class = "text-danger" })

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
        <div class="card-body">
            <h3 class="card-title">@Model.Product.Name</h3>
            <p class="card-text">This is a description of a Musical instrument</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    @*<a
                                    ="#"
                        class="btn btn-sm btn-outline-secondary">View details</a>*@
                    <a id="cartButton"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-Id="@Model.Product.Id"
                       class="btn btn-sm btn-outline-primary">Add to cart</a>
                </div>
                <h3 class="text-muted">@Model.Product.Price.ToString("c")</h3>
                <h2 class="text-muted">@Model.Quantity</h2>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}