@model ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0 && !string.IsNullOrEmpty(@ViewBag.UserName))
{
    <li>
        <a asp-controller="ShoppingCart">
            <i class="fa fa-shopping-cart" style="font-size:40px;"></i>
            <span id="cart-status">
                @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>
}
